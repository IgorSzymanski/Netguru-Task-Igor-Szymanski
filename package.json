{
	"name": "netguru-task",
	"version": "1.0.0",
	"main": "dist/main.js",
	"author": "Igor Szyma≈Ñski",
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"format": "prettier \"src/**/*.ts\" --write",
		"start:dev": "tsc-watch --onSuccess \"node -r ./tsconfig-paths.js dist/main.js\"",
		"start:debug": "tsc-watch --onSuccess \"node --inspect -r ./tsconfig-paths.js dist/main.js\"",
		"start:prod": "node -r ./tsconfig-paths.js dist/main.js",
		"test": "jest --coverage --verbose",
		"test:watch": "jest --watchAll",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"docker-compose": "yarn && yarn build && yarn start:prod",
		"start": "yarn start:prod"
	},
	"dependencies": {
		"axios": "0.21.1",
		"body-parser": "1.19.0",
		"class-transformer": "0.2.3",
		"class-validator": "0.10.1",
		"cors": "2.8.5",
		"dotenv": "8.2.0",
		"express": "4.17.1",
		"mongoose": "5.8.0",
		"query-string": "6.9.0",
		"reflect-metadata": "0.1.12",
		"routing-controllers": "0.8.0",
		"tsconfig-paths": "3.9.0"
	},
	"devDependencies": {
		"@types/body-parser": "1.17.1",
		"@types/cors": "2.8.6",
		"@types/express": "4.17.1",
		"@types/jest": "24.0.23",
		"@types/mongoose": "5.5.34",
		"husky": "3.1.0",
		"jest": "24.9.0",
		"prettier": "1.19.1",
		"pretty-quick": "2.0.1",
		"ts-jest": "24.2.0",
		"tsc-watch": "4.0.0",
		"typescript": "3.7.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"lint-staged": {
		"*.{ts,js}": [
			[
				"prettier --write",
				"git add"
			]
		]
	}
}
